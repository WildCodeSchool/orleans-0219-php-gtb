{% extends 'base.html.twig' %}
{% block body %}
    {{ include ('admin/_header.html.twig', {titleHeader: 'Tableau de Bord'}) }}
    {{ include ('admin/_navbar.html.twig') }}

    <section class="body-dashboard float-right col-10 row justify-content-center align-items-center">
        <div class="card card-dashboard col-10 col-sm-6 col-md-5 mt-2 mr-md-2 position-relative">
            <span class="position-absolute"><i class="far fa-smile"></i></span>
            {% for eventMostCommented in eventsMostCommented %}
                {{ include ('admin/_cardEventsIndex.html.twig', {picture: eventMostCommented.picture, name: eventMostCommented.name, nbComments: eventMostCommented.nbComments, date: eventMostCommented.date|date('d/m/Y')}) }}
            {% endfor %}
        </div>
        <div class="card card-dashboard col-10 col-sm-6 col-md-5 mt-2 mr-md-2 position-relative">
            <span class="position-absolute"><i class="far fa-smile"></i></span>
            {% for eventLessCommented in eventsLessCommented %}
                {{ include ('admin/_cardEventsIndex.html.twig', {picture: eventLessCommented.picture, name: eventLessCommented.name, nbComments: eventLessCommented.nbComments, date: eventLessCommented.date|date('d/m/Y')}) }}
            {% endfor %}
        </div>
    </section>

{% endblock %}
