{% extends 'base.html.twig' %}
{% block body %}
    {{ include ('admin/_header.html.twig') }}
    {{ include ('admin/_navbar.html.twig') }}

    <section class="body-dashboard float-right col-10 row justify-content-center align-items-center">
        <div class="card card-dashboard col-10 col-sm-6 col-md-5 mt-2 mr-md-2 position-relative">
            <span class="position-absolute"><i class="far fa-smile"></i></span>
                {% for eventMoreCommented in eventsMoreCommented%}
                    <div class="card m-2">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="{{ eventMoreCommented.picture }}" class="card-img" alt="...">
                            </div>
                            <div class="col-md-8">
                                <h5 class="card-title pl-2 pt-2">{{ eventMoreCommented.name }}</h5>
                                <small class="text-muted d-block pl-2">{{ eventMoreCommented.nbComments }} commentaires</small>
                                <small class="text-muted d-block pl-2">{{ eventMoreCommented.date|date('d/m/Y') }}</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        </div>
        <div class="card card-dashboard col-10 col-sm-6 col-md-5 mt-2 mr-md-2 position-relative">
            <span class="position-absolute"><i class="far fa-frown"></i></span>
            {% for eventLessCommented in eventsLessCommented%}
                <div class="card m-2">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{ eventLessCommented.picture }}" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title pl-2 pt-2">{{ eventLessCommented.name }}</h5>
                            <small class="text-muted d-block pl-2">{{ eventLessCommented.nbComments }} commentaires</small>
                            <small class="text-muted d-block pl-2">{{ eventLessCommented.date|date('d/m/Y') }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
