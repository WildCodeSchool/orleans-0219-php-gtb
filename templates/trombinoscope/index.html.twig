{% extends 'base.html.twig' %}

{% block title %}Trombinoscope - GTB{% endblock %}

{% block body %}
    {% include '_navbar.html.twig' %}
    {% include 'home/_jumbotron.html.twig' %}
    <section class="trombinoscope justify-content-center">
        <div class="container">
            {% for status, users in trombinoscodeUsers %}
                <h2 class="text-center my-3">{{ status }}</h2>
                <div class="row justify-content-center">
            {% for user in users %}
                    <div class="col-sm-3 my-2">
                        <div class="card text-center">
                            <img src="{{ user.picture }}"
                                 alt="{{ user.firstname }} {{ user.lastname }}"
                                 class="card-img-top">
                            <p class="card-title">{{ user.firstname }} {{ user.lastname }}</p>
                            {% if user.roles.0 == 'ROLE_PRESIDENT' %}
                                <p class="card-body">{{ user.status }}</p>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
                </div>
            {% endfor %}
    </section>
{% endblock %}
