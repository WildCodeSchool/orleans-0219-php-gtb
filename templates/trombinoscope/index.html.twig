{% extends 'base.html.twig' %}

{% block title %}Trombinoscope - GTB{% endblock %}

{% block body %}
    {% include '_navbar.html.twig' %}
    {% include 'home/_jumbotron.html.twig' %}
    <section class="trombinoscope justify-content-center">
        <div class="container">
            {% for role, users in trombinoscodeUsers %}
                <h2 class="text-center my-3 pt-5">{{ role }}</h2>
                <div class="row justify-content-center">
                    {% for user in users %}
                        <div class="col-sm-3 my-2">
                            <div class="card text-center">
                                {% set img = user.picture is not empty ? user.picture : 'build/images/person-placeholder.png' %}
                                <img src="{{ asset(img) }}"
                                     alt="{{ user.firstname }} {{ user.lastname }}"
                                     class="card-img-top">
                                <div class="card-body">
                                    <div class="card-title">{{ user.firstname }} {{ user.lastname|upper }}</div>
                                    <span class="badge badge-secondary">{{ user.status }}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
    </section>
{% endblock %}
