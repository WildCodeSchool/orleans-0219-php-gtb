{% extends 'base.html.twig' %}
{% block body %}
    {{ include('_navbar.html.twig') }}

    <section class="event-to-come justify-content-center">
        <h1 class="text-center pt-5 mt-5">{{ event.name }}</h1>
        <div class="row justify-content-center">
            <div class="card col-12 col-md-5 pl-0 pr-0 pb-5">
                <img src="{{ event.picture }}" class="card-img-top" alt="{{ event.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ event.name }}</h5>
                    <p class="card-text">{{ event.longDescription }}</p>
                    <p class="card-text"><small class="text-muted">{{ event.date|date('d/m/Y') }}</small></p>
                </div>
            </div>
            <div class="discussion col-12 col-md-5">

            </div>
        </div>


    </section>

    {{ include('_footer.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('.js-add-comment').on('click', function(e) {
                e.preventDefault();

                let deleteUrl = $(this).data('url');
                let element = $(this).closest('div');

                $.ajax({
                    url: deleteUrl,
                    method: 'POST',
                    success: function() {
                        element.fadeOut();
                    }
                });
            });
        });
    </script>
{% endblock %}